{
    "manifest_version": 3,
    "name": "Quiz Answer Finder",
    "version": "1.0",
    "description": "Tìm câu trả lời cho câu hỏi từ bộ dữ liệu",
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["question.json.txt"],
            "matches": ["<all_urls>"]
        }
    ]
} 